{
  "exclude": [".git/**", "node_modules/**", "dist/**"],
  "always-semicolon": true,
  "block-indent": "  ",
  "color-case": "lower",
  "color-shorthand": true,
  "element-case": "lower",
  "eof-newline": true,
  "leading-zero": true,
  "lines-between-rulesets": 1,
  "quotes": "single",
  "remove-empty-rulesets": true,
  "space-after-colon": " ",
